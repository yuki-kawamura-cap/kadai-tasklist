<% if logged_in? %>

<h1>タスク一覧</h1>

<% if current_user.tasks.any? %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>
      
<% current_user.tasks.each do |task| %>

        <tr>
          <td>
<%= link_to task.id, task %>
</td>
          <td>
<%= task.status %>
</td>
          <td>
<%= task.content %>
</td>
        </tr>
      
<% end %>

    </tbody>
  </table>
  <div>

<%= paginate @tasks %>

  </div>
<% end %>

<% else %>

<% link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
<% link_to 'Log in', login_path, class: 'btn btn-lg btn-primary' %>

<% end %>